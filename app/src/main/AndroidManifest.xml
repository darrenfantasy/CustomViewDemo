<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.fantasy.darren.customview"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <protected-broadcast android:name="android.intent.action.MEDIA_MOUNTED"></protected-broadcast>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.fantasy.darren.customview.ui.MainActivity"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.fantasy.darren.customview.ui.AnimationButtonActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.fantasy.darren.customview.ui.MyCanvasActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.fantasy.darren.customview.ui.MySwitchButtonActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.fantasy.darren.customview.ui.MyPickerViewActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.fantasy.darren.customview.ui.MyWordWrapActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.fantasy.darren.customview.ui.MyProgressBarActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.fantasy.darren.customview.ui.MyEditTextActivity"
                  android:screenOrientation="portrait"/>
    </application>

</manifest>