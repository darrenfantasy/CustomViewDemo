<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:darren="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.fantasy.darren.customview.widget.MySimpleSwitchButton
        android:id="@+id/simple_switch_btn"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        darren:switch_on="@mipmap/toggle_btn_checked"
        darren:switch_off="@mipmap/toggle_btn_unchecked"
        android:layout_height="wrap_content"/>
    <com.fantasy.darren.customview.widget.MySwitchButton
        android:layout_below="@id/simple_switch_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        darren:is_open="true"
        darren:background="@mipmap/switch_btn_bg"
        darren:slide_bar="@mipmap/switch_btn_slipper"/>
</RelativeLayout>